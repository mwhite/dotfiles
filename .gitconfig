[include]  # requires git >= 1.7.10
    path = ~/.gitaliases

[user]
	name = Michael White
    email = m@mwhite.info

[color]
    ui = true

[core]
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
    pager = less -x1,5

[diff]
    renames = copies
    renamelimit = 0

[fetch]
    recurseSubmodules = on-demand
    prune = true

[status]
    relativePaths = false

[merge]
    tool = vimdiff
    ff = false

[mergetool]
    prompt = true

[rebase]
    autosquash = true
    autostash = true

[rerere]
    enabled = true

[github]
	user = mwhite
